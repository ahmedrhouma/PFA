<div style="height: 78.5vh;" >
    <div class="row">
    <div class="container">
        <h2 class="title-vote">Liste des Evenements en cours</h2>
        <div class="row">
            {% for event in events %}
                {% if event.status == 1 %}
                    <div style="padding: 0px;box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);"class="card mb-3 col-3">
                        <div style="position: absolute" class="corner-ribbon top-right sticky {% if event.status == 0 %} blue {% elseif event.status == 1 %}  green {% elseif event.status == 2 %} red {% endif %} shadow">
                            {% if event.status == 0 %}En attente{% elseif event.status == 1 %} En cours {% elseif event.status == 2 %} Terminé {% endif %}
                        </div>
                        <img class="card-img-top" src="/uploads/{{ event.photo }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"style="font-size: 17px; text-transform: uppercase; font-weight: 700;">
                                {{ event.title }}
                            </h5>
                            {% if event.status == 0 %}
                                <p class="card-text">
                                    Cette événement commencerale {{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}jusqu'a {{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}
                                </p>
                            {% elseif event.status == 1 %}
                                <p class="card-text">
                                    Cette événement a commencéele {{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}jusqu'a {{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}
                                </p>
                            {% elseif event.status == 2 %}
                                <p class="card-text">
                                    Cette événement a terminele {{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}et a commencée le {{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}
                                </p>
                            {% endif %}
                            <p class="card-text">
                                <small class="text-muted">
                                    Durée de cette evenement est {{ event.duration }}jours
                                </small>
                            </p>
                            <a class="  pull-left label success  "href="{{ path('eventUser_show', {'id': event.id}) }}">Voir plus</a>
                            {% if event.status == 1 %}
                                <a class=" pull-right label danger "href="{{ path('eventUser_vote', {'id': event.id}) }}">Voter</a>
                            {% elseif  event.status == 2 %}
                                <a class=" pull-right label primary "href="{{ path('eventUser_result', {'id': event.id}) }}">Resultat</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-1"></div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
</div>
