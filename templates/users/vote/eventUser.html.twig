<div class="row">

    <div class="container">
        <h2 class="title-vote">Liste des Evenements</h2>
        {% for event in events %}

            <div style="padding: 0px;   box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);"
                 class="card mb-3 col-3">
                <img class="card-img-top" src="/uploads/{{ event.photo }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"
                        style="font-size: 17px; text-transform: uppercase; font-weight: 700;">{{ event.title }}</h5>
                    {% if event.status == 0 %}
                        <p class="card-text">Cette événement commencera
                            le {{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}
                            jusqu'a {{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}</p>
                    {% elseif event.status == 1 %}
                        <p class="card-text">Cette événement a commencée
                            le {{ event.dateStart ? event.dateStart|date('d-m-Y') : '' }}
                            jusqu'a {{ event.dateEnd ? event.dateEnd|date('d-m-Y') : '' }}</p>
                    {% endif %}
                    <p class="card-text"><small class="text-muted">Durée de cette evenement est {{ event.duration }}
                            jours</small></p>
                    <a class=" pull-right label danger "
                       href="{{ path('eventUser_show', {'id': event.id}) }}">Voir plus</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>