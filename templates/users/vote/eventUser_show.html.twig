<div class="row">

    <div class="container">
        <h2 class="title-vote">{{ event.title }} </h2>
        <div class="row">
            <div style="box-shadow: 0 0 17px rgba(120,130,140, 0.35); padding: 0px;" class=" col-3">
                <img style="position: relative;border-radius: 0%;"
                     id="output"
                     class="img-fluid" src="/uploads/{{ event.photo }}" alt="">

            </div>

            <div class="box col-8" style="box-shadow: 0 0 17px rgba(120,130,140, 0.35);    margin-left: 1%;">

                <div style="    margin-top: 37px;" class="row">
                    <table class="col-12 table">

                        <tbody>

                        <tr>
                            <th>Nom de l'evenement</th>
                            <td>{{ event.title }}</td>
                        </tr>

                        <tr>
                            <th>Date du debut</th>
                            <td>{{ event.dateStart ? event.dateStart|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date du fin</th>
                            <td>{{ event.dateEnd ? event.dateEnd|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{% if event.status == 0 %}En attente{% elseif event.status == 1 %} En cours {% elseif event.status == 2 %} TerminÃ© {% endif %}</td>
                        </tr>

                        <tr>
                            <th>Description</th>
                            <td>{{ event.description }}</td>
                        </tr>
                        </tbody>
                    </table>


                </div>


            </div>
        </div>


        <h2 class="title-vote">Liste des candidats dans l'evenement </h2>
        <div class="row">
            <div class="box" style="    width: 100%;">
                <table style="width: 100% !important;"
                       class="table  table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>#</th>

                        <th>Nom et Prenom</th>
                        <th>Date du naissance</th>
                        <th>Sexe</th>
                        <th>Action</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for candidat in candidats %}
                        <tr>

                            <td><img style="width: 50px"
                                     src="/uploads/{{ candidat.photo }}" alt="">
                            </td>

                            <td>{{ candidat.firstName }} {{ candidat.lastName }}</td>
                            <td>{{ candidat.dateOfBirth ? candidat.dateOfBirth|date('Y-m-d') : '' }}</td>


                            <td>{% if candidat.gender == 0 %} Homme {% else %} Femme {% endif %} </td>

                            <td class="pull-right">
                                <a class="label danger "
                                   href="{{ path('eventUser_candidat_show', {'id': candidat.id}) }}">Montrer</a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
