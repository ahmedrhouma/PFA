
    <div class="row">

    <div class="container">
        <h2 class="title-vote">{{ event.title }} </h2>

        <div class="box" style="border-top: #2196f3 solid;">

            <div style="    margin-top: 50px;" class="row">
                <div class="col-6 avatar-upload" style="border-radius: 0%;z-index: 1000;">

                    <div class="avatar-preview"
                         style="border-radius: 0%;border-color: #2196f3 !important;  margin-top: -45px;margin-bottom: -125px;">
                        <div id="imagePreview">
                            <img style="width: 192px;height: 186px;position: relative;border-radius: 0%;"
                                 id="output"
                                 class="img-fluid" src="/uploads/{{ event.photo }}" alt="">
                        </div>
                    </div>

                </div>
                <table class="col-6 table">

                    <tbody>

                    <tr>
                        <th>Nom de l'evenement</th>
                        <td>{{ event.title }}</td>
                    </tr>

                    <tr>
                        <th>Date du debut</th>
                        <td>{{ event.dateStart ? event.dateStart|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date du fin</th>
                        <td>{{ event.dateEnd ? event.dateEnd|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{% if event.status == 0 %}En attente{% elseif event.status == 1 %} En cours {% elseif event.status == 2 %} TerminÃ© {% endif %}</td>
                    </tr>
                    </tbody>
                </table>


            </div>


        </div>

        <h2 class="title-vote">Description </h2>
        <div class="row">
            <div class="box"  style="    width: 100%;" ><p style="    padding-left: 22px;">
                {{ event.description }}

            </p></div></div>
        <h2 class="title-vote">Liste des candidats dans l'evenement </h2>
        <div class="row">
            <div class="box"style="    width: 100%;" >
            <table style="width: 100% !important;"
                   class="table  table-striped table-bordered">
                <thead>
                <tr>
                    <th>#</th>

                    <th>Nom et Prenom</th>
                    <th>Date du naissance</th>
                    <th>Sexe</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>

                {% for candidat in candidats %}
                    <tr>

                        <td><img style="width: 50px"
                                 src="/uploads/{{ candidat.photo }}" alt="">
                        </td>

                        <td>{{ candidat.firstName }} {{ candidat.lastName }}</td>
                        <td>{{ candidat.dateOfBirth ? candidat.dateOfBirth|date('Y-m-d') : '' }}</td>


                        <td>{% if candidat.gender == 0 %} Homme {% else %} Femme {% endif %} </td>

                        <td class="pull-right">
                            <a class="label danger "
                               href="{{ path('eventUser_candidat_show', {'id': candidat.id}) }}">Montrer</a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
