                                <label for="events" style="margin-right:10px"><h6 style="line-height: 31px">Ev√©nement :</h6></label>
                                <select class="form-control col-4" id="events" name="events">
                                    <option value="0"></option>
                                    {% for event in events %}
                                        <option value='{{ event.id }}'>{{ event.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="box" style="border-top: #2196f3  solid;">
                            <div class="box-header">
                                <strong>liste des electeurs</strong>
                                <a class="label primary pull-right" href="{{ path('elector_new') }}">Ajouter nouveau</a>
                                <!--modals-->
                            </div>

                            <table class="table table-striped table-bordered" id="example" style="width: 100%">
                                <thead>
                                <tr>
                                    <th>

                                    </th>
