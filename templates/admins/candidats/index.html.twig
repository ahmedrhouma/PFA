
    <div class="app-body">

        <!-- ############ PAGE START-->
        <div class="row-col">
            <div class="col-lg b-r">

                <div class="padding">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="box" style="  border-top: #2196f3 solid;">
                                <div class="box-header">

                                    <strong>Liste des candidats</strong> <a class="label primary pull-right"
                                                                            href="{{ path('candidats_new') }}">Ajouter nouveau</a>
                                    <!--modals-->

                                </div>
                                <div class="row" style="align-items: center;margin-left: 15px;">
                                    <label for="events" style="margin-right:10px">Filtre avec Ev√©nement :</label>
                                    <select class="form-control col-4" id="events" name="events">
                                        <option value="0"></option>
                                        {% for event in events %}
                                            <option value='{{ event.id }}'>{{ event.title }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <table style="  width: 100% !important;" class="table  table-striped table-bordered" id="example" >
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>CIN</th>
                                        <th>Nom et Prenom</th>
                                        <th>Date du naissance</th>
                                        <th>Email</th>
                                        <th>phone</th>
                                        <th>Sexe</th>


                                        <th class="pull-right">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for candidat in candidats %}
                                        <tr>

                                            <td><img style="width: 50px" src="/uploads/{{ candidat.photo }}" alt=""></td>
                                            <td>{{ candidat.cin }} </td>
                                            <td>{{ candidat.firstName }} {{ candidat.lastName }}</td>
                                            <td>{{ candidat.dateOfBirth ? candidat.dateOfBirth|date('Y-m-d') : '' }}</td>
                                            <td>{{ candidat.email }} </td>
                                            <td>{{ candidat.phone }} </td>
                                            <td>{% if candidat.gender == 0 %} Homme {% else %} Femme {% endif %} </td>

                                            <td class="pull-right">
                                                <a class="label danger "
                                                   href="{{ path('candidats_show', {'id': candidat.id}) }}">Montrer</a>
                                                <a class="label success "
                                                   href="{{ path('candidats_edit', {'id': candidat.id}) }}">Modifier</a>

                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>


        <!-- ############ PAGE END-->

</div>
