
<div id="content" class="app-content box-shadow-z2 bg pjax-container" role="main">
    <div class="app-header white bg b-b">
        <div class="navbar" data-pjax>
            <a data-toggle="modal" data-target="#aside" class="navbar-item pull-left hidden-lg-up p-r m-a-0">
                <i class="ion-navicon"></i>
            </a>
            <div class="navbar-item pull-left h5" id="pageTitle">Listes</div>

        </div>
    </div>

    <div class="app-body">

        <div class="avatar-upload" style="z-index: 1000;">

            <div class="avatar-preview" style="margin-top: -45px;margin-bottom: -125px;">
                <div id="imagePreview">
                    <img style="width: 192px;height: 182px;position: relative;border-radius: 100%;"
                         id="output"
                         class="img-fluid" src="/uploads/{{ liste.photo }}" alt="">
                </div>
            </div>

        </div>

        <!-- ############ PAGE START-->
        <div class="row-col">
            <div class="col-lg b-r">

                <div class="padding">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="box">
                                <div class="box-header">

                                    <a
                                            class="label success pull-right" href="{{ path('liste_new') }}">Ajouter
                                        nouveau</a>
                                    <a class="label danger pull-right" href="{{ path('liste') }}">Liste des
                                        listes</a>
                                </div>
                                <table class="table">
                                    <tbody>

                                    <tr>
                                        <th>Nom du liste</th>
                                        <td>{{ liste.listName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Type</th>
                                        <td>{{ liste.type }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ liste.description }}</td>
                                    </tr>
                                    </tbody>
                                </table>


                                <a class="btn btn-primary  col-2" href="{{ path('liste_edit', {'id': liste.id}) }}">Modifier</a>


                                {{ include('admins/liste/_delete_form.html.twig') }}
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>


        <!-- ############ PAGE END-->

    </div>
    <div class="row-col">
        <div class="col-lg b-r">

            <div class="padding">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box">
                            <div class="box-header">

                                <strong>Liste des candidats de {{ liste.listName }}</strong> <a class="label success pull-right"
                                                                        href="{{ path('candidats_new') }}">Ajouter nouveau</a>
                                <!--modals-->

                            </div>
                            <table class="table  table-striped table-bordered" id="example" >
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom et Prenom</th>
                                    <th>Date du naissance</th>
                                    <th>Email</th>
                                    <th>Sexe</th>


                                    <th class="pull-right">Actions</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for candidat in candidats %}
                                    <tr>

                                        <td><img style="width: 50px" src="/uploads/{{ candidat.photo }}" alt=""></td>
                                        <td>{{ candidat.firstName }} {{ candidat.lastName }}</td>
                                        <td>{{ candidat.dateOfBirth ? candidat.dateOfBirth|date('Y-m-d') : '' }}</td>
                                        <td>{{ candidat.email }} </td>
                                        <td>{{ candidat.gender }} </td>

                                        <td class="pull-right">
                                            <a class="label danger "
                                               href="{{ path('candidats_show', {'id': candidat.id}) }}">Montrer</a>
                                            <a class="label primary "
                                               href="{{ path('candidats_edit', {'id': candidat.id}) }}">Modifier</a>

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>

<!-- / -->
