
{{ form_start(form) }}


<div class="avatar-upload">
    <div class="avatar-edit">

        {{ form_widget(form.photo) }}
        <label for="liste_photo"></label>
    </div>
    <div class="avatar-preview">
        <div id="imagePreview">
            <img style="width: 192px;height: 182px;position: relative;border-radius: 100%;" id="output"
                 class="img-fluid" src="/images/profile.jpg" alt="">
        </div>
    </div>

</div>

<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Nom du liste</label>
            {{ form_widget(form.list_name) }}
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">type</label>
            {{ form_widget(form.type) }}
        </div>

        <div class="form-group col-md-12">
            <label for="inputAddress2">Description</label>
            {{ form_widget(form.description) }}
        </div>


        {{ form_widget(form._token) }}
    </div>

    <button style="margin-left: 41.5%;margin-bottom: 10px;" class="btn btn-primary col-2">
        <strong>{{ button_label|default('Enregistrer') }}</strong></button>


</form>


{{ form_end(form) }}

