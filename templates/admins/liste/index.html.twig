
<div id="content" class="app-content box-shadow-z2 bg pjax-container" role="main">
    <div class="app-header white bg b-b">
        <div class="navbar" data-pjax>
            <a data-toggle="modal" data-target="#aside" class="navbar-item pull-left hidden-lg-up p-r m-a-0"><i class="ion-navicon"></i></a>
            <div class="navbar-item pull-left h5" id="pageTitle">
                Listes
            </div>
        </div>
    </div>
    <div class="app-body">
        <!-- ############ PAGE START-->
        <div class="row-col">
            <div class="col-lg b-r">
                <div class="padding">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="box">
                                <div class="box-header">
                                    <strong>liste des listes</strong>
                                    <a class="label success pull-right"href="#openModal-about">Ajouter nouveau</a>
                                    <!--modals-->
                                    <div id="openModal-about" class="modalDialog">
                                        <div>
                                            <a href="#close" title="Close" class="close">X</a>
                                            <h2>Ajouter nouveaux listes</h2>
                                            <hr>
                                            <div class="row">
                                                <div class=" col-6 ">
                                                    <a style="font-size: 100% !important;"class="label primary  pull-center">Import listes (fichierxls)</a>
                                                </div>
                                                <div class=" col-6 ">
                                                    <a style="font-size: 100% !important;"class="label primary  pull-center"href="{{ path('liste_new') }}">Ajoute nouveau liste(Formulaire)</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>
                                            #
                                        </th>
                                        <th>
                                            Nom du liste
                                        </th>
                                        <th>
                                            Type
                                        </th>
                                        <th class="pull-right">
                                            Actions
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for liste in listes %}
                                        <tr>
                                            <td>
                                                <img style="width: 50px" src="/uploads/{{ liste.photo }}" alt="">
                                            </td>
                                            <td>
                                                {{ liste.listName }}
                                            </td>
                                            <td>
                                                {{ liste.type }}
                                            </td>
                                            <td class="pull-right">
                                                <a class="label danger "href="{{ path('liste_show', {'id': liste.id}) }}">Montrer</a>
                                                <a class="label primary "href="{{ path('liste_edit', {'id': liste.id}) }}">Modifier</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="8">
                                                no records found
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ############ PAGE END-->
    </div>
</div>
